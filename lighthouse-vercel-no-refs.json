        },
        "responses": {
          "200": {
            "description": "Erfolgreiche Operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status_code": {"type": "integer"},
                    "status_message": {"type": "string"},
                    "time": {"type": "string"},
                    "cost": {"type": "number"},
                    "tasks_count": {"type": "integer"},
