          "benchmark_index": {"type":"number"}
        }
      },
      "LighthouseConfigSettings": {
        "type": "object",
        "properties": {
          "emulated_form_factor": {"type": "string"},
          "locale": {"type": "string"},
          "only_categories": {"type": "array", "items": {"type": "string"}}
        }
      },
      "LighthouseCategories": {
        "type": "object",
        "properties": {
          "performance": {"$ref": "#/components/schemas/PerformanceCategory"},
          "accessibility": {"$ref": "#/components/schemas/CategoryBase"},
          "best-practices": {"$ref": "#/components/schemas/CategoryBase"},
          "seo": {"$ref": "#/components/schemas/LighthouseCategoryBase"},
          "pwa": {"$ref": "#/components/schemas/CategoryBase"}
        }
      },
      "CategoryBase": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "score": {"type": "number"},
          "audit_refs": {"type": "array", "items": {"type": "object"}}
        }
      },
      "LighthouseCategoryBase": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "score": {"type": "number"},
          "audit_refs": {"type": "array", "items": {"type": "object"}}
        }
      },
