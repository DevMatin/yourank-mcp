        "type": "object",
        "properties": {
          "entries": {"type": "array", "items": {"type": "object"}},
          "total": {"type": "number"}
        }
      },
      "LighthouseBlobResponse": {
        "type": "object",
        "properties": {
          "status_code": {"type": "integer"},
          "status_message": {"type": "string"},
          "blob_storage": {"$ref": "#/components/schemas/BlobStorageMeta"},
          "summary": {"$ref": "#/components/schemas/LighthouseSummary"},
