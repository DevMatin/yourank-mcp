    "/v3/on_page/lighthouse/summary/{id}": {
      "get": {
        "tags": [
          "Lighthouse"
        ],
        "summary": "Lighthouse Summary",
        "description": "Extrahiert wichtige Lighthouse-Daten und Performance-Metriken aus großen Reports",
        "operationId": "getLighthouseSummary",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Task-ID des Lighthouse Tests",
            "schema": {
              "type": "string"
            },
            "example": "07131248-1535-0216-1000-17384017ad04"
          }
        ],
        "responses": {
          "200": {
            "description": "Erfolgreiche Operation - Lighthouse Summary mit Scores, Metriken und Top-Issues",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/LighthouseSummaryResponse"}
              }
            }
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      }
    }
