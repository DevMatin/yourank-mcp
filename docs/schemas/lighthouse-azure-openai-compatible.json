          "audit_refs": {"type": "array", "items": {"type": "object"}}
        }
      },
      "LighthouseAudit": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "score": {"type": "number"},
