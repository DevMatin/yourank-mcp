{
  "openapi": "3.1.0",
  "info": {
    "title": "DataForSEO MCP Server Gateway",
    "description": "Gateway zu allen DataForSEO-APIs über MCP Server. Bietet Zugriff auf 409 Tools: SERP-Analyse, Keyword-Recherche, OnPage-SEO, Backlink-Analyse, Domain-Analytics, Business-Data, Content-Analyse, Content-Generation, Merchant-APIs und AI-Optimization.",
    "version": "2.7.12",
    "server": "https://yourank-mcp.vercel.app"
  },
  "servers": [
    {
      "url": "https://yourank-mcp.vercel.app"
    }
  ],
  "paths": {
    "/mcp": {
      "post": {
        "operationId": "callMcpTool",
        "summary": "Rufe MCP-Server Tool auf",
        "description": "Führt einen Tool-Aufruf auf dem MCP-Server aus über JSON-RPC 2.0 Protokoll. KRITISCH: Du MUSST immer das 'arguments' Objekt mitgeben! Verfügbare Tool-Kategorien: SERP (serp_google_organic_live, serp_google_organic_live_advanced, serp_youtube_organic_live_advanced), Keywords (keywords_data_google_ads_search_volume, keywords_data_bing_search_volume), OnPage (on_page_instant_pages, on_page_lighthouse, on_page_content_parsing), Backlinks (backlinks_summary, backlinks_history), Domain Analytics (domain_analytics_technologies_domain_technologies, domain_analytics_whois), Business Data (business_data_google_my_business_info_live), Content Analysis (content_analysis_search), Content Generation (content_generation_generate_text), Merchant (merchant_google_sellers_task_post, merchant_amazon_products_task_post), AI Optimization (ai_optimization_keyword_data_search_volume).",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "jsonrpc": {
                    "type": "string",
                    "enum": ["2.0"],
                    "default": "2.0",
                    "description": "JSON-RPC Version (immer 2.0)"
                  },
                  "method": {
                    "type": "string",
                    "enum": ["tools/call"],
                    "default": "tools/call",
                    "description": "MCP Methode für Tool-Aufrufe"
                  },
                  "params": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Tool-Name. Beispiele: keywords_data_google_ads_search_volume (Keyword-Suchvolumen), serp_google_organic_live (Google SERP), on_page_instant_pages (OnPage-Analyse), backlinks_summary (Backlink-Übersicht), domain_analytics_technologies_domain_technologies (Website-Technologien), business_data_google_my_business_info_live (Google Business Profil)",
                        "enum": [
                          "serp_google_organic_live",
                          "serp_google_organic_live_advanced", 
                          "serp_youtube_organic_live_advanced",
                          "keywords_data_google_ads_search_volume",
                          "keywords_data_bing_search_volume",
                          "on_page_instant_pages",
                          "on_page_lighthouse",
                          "on_page_content_parsing",
                          "backlinks_summary",
                          "backlinks_history",
                          "domain_analytics_technologies_domain_technologies",
                          "domain_analytics_whois",
                          "business_data_google_my_business_info_live",
                          "content_analysis_search",
                          "content_generation_generate_text",
                          "merchant_google_sellers_task_post",
                          "merchant_amazon_products_task_post",
                          "ai_optimization_keyword_data_search_volume"
                        ]
                      },
                      "arguments": {
                        "type": "object",
                        "description": "KRITISCH: Dieses Objekt ist PFLICHT! Tool-spezifische Parameter. Standard-Parameter für Deutschland: location_name: 'Germany', language_code: 'de'. Beispiele: Für Keyword-Recherche: {keywords: ['SEO', 'Marketing'], location_name: 'Germany', language_code: 'de'}. Für SERP: {keyword: 'seo agentur', location_name: 'Germany', language_code: 'de'}. Für OnPage: {url: 'https://example.com'}. Für Keyword-Suchvolumen: {keywords: ['Kaffee', 'Kaffeemaschine'], location_name: 'Germany', language_code: 'de'}. Der MCP-Server validiert alle Argumente automatisch.",
                        "properties": {
                          "keyword": {
                            "type": "string",
                            "description": "Suchbegriff für SERP-Analysen"
                          },
                          "keywords": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "Array von Keywords für Keyword-Analysen"
                          },
                          "url": {
                            "type": "string",
                            "format": "uri",
                            "description": "URL für OnPage-Analysen"
                          },
                          "location_name": {
                            "type": "string",
                            "default": "Germany",
                            "description": "Standort-Name (Standard: Germany)"
                          },
                          "location_code": {
                            "type": "integer",
                            "default": 2276,
                            "description": "Standort-Code (Standard: 2276 für Deutschland)"
                          },
                          "language_code": {
                            "type": "string",
                            "default": "de",
                            "description": "Sprach-Code (Standard: de)"
                          },
                          "depth": {
                            "type": "integer",
                            "default": 20,
                            "description": "Anzahl der Ergebnisse (Standard: 20)"
                          },
                          "device": {
                            "type": "string",
                            "enum": ["desktop", "mobile", "tablet"],
                            "default": "desktop",
                            "description": "Gerätetyp (Standard: desktop)"
                          },
                          "limit": {
                            "type": "integer",
                            "default": 100,
                            "description": "Maximale Anzahl der Ergebnisse (Standard: 100)"
                          }
                        }
                      }
                    },
                    "required": ["name", "arguments"]
                  },
                  "id": {
                    "type": "number",
                    "default": 1,
                    "description": "Request-ID für JSON-RPC"
                  }
                },
                "required": ["jsonrpc", "method", "params", "id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Erfolgreiche MCP-Tool-Antwort im JSON-RPC 2.0 Format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string",
                      "description": "JSON-RPC Version"
                    },
                    "result": {
                      "type": "object",
                      "properties": {
                        "version": {
                          "type": "string",
                          "description": "DataForSEO API Version"
                        },
                        "status_code": {
                          "type": "integer",
                          "description": "Status Code (20000 = OK)"
                        },
                        "status_message": {
                          "type": "string",
                          "description": "Status Message"
                        },
                        "time": {
                          "type": "string",
                          "description": "Verarbeitungszeit"
                        },
                        "cost": {
                          "type": "number",
                          "description": "API-Kosten in Credits"
                        },
                        "tasks_count": {
                          "type": "integer",
                          "description": "Anzahl der Tasks"
                        },
                        "tasks_error": {
                          "type": "integer",
                          "description": "Anzahl der fehlerhaften Tasks"
                        },
                        "tasks": {
                          "type": "array",
                          "description": "Array mit Task-Ergebnissen",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "description": "Task-ID"
                              },
                              "status_code": {
                                "type": "integer",
                                "description": "Task-Status-Code"
                              },
                              "status_message": {
                                "type": "string",
                                "description": "Task-Status-Message"
                              },
                              "result": {
                                "type": "array",
                                "description": "Task-Ergebnisse"
                              }
                            }
                          }
                        }
                      }
                    },
                    "id": {
                      "type": "number",
                      "description": "Request-ID"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ungültige Anfrage oder Tool-Parameter",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "number"
                        },
                        "message": {
                          "type": "string"
                        }
                      }
                    },
                    "id": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server-Fehler",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "number"
                        },
                        "message": {
                          "type": "string"
                        }
                      }
                    },
                    "id": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
