{
  "openapi": "3.0.0",
  "info": {
    "title": "DataForSEO SERP API",
    "description": "Umfassende SERP API für Google, Bing und YouTube Suchergebnisse",
    "version": "1.0.0",
    "contact": {
      "name": "DataForSEO MCP Server",
      "url": "https://yourank-mcp.vercel.app"
    }
  },
  "servers": [
    {
      "url": "https://yourank-mcp.vercel.app/mcp",
      "description": "DataForSEO MCP Server auf Vercel"
    }
  ],
  "security": [
    {
      "basicAuth": []
    }
  ],
  "paths": {
    "/mcp": {
      "post": {
        "summary": "SERP API Tool aufrufen",
        "description": "Ruft verschiedene SERP API Tools über den MCP Server auf",
        "operationId": "callSerpTool",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "jsonrpc": {
                    "type": "string",
                    "example": "2.0"
                  },
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "method": {
                    "type": "string",
                    "example": "tools/call"
                  },
                  "params": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "enum": [
                          "serp_google_organic_live",
                          "serp_google_ai_mode_live_advanced",
                          "serp_bing_organic_live",
                          "serp_youtube_organic_live",
                          "serp_google_images_live_advanced",
                          "serp_google_autocomplete_live_advanced",
                          "serp_google_jobs_live_advanced",
                          "serp_google_dataset_search_live_advanced",
                          "serp_google_dataset_info_live_advanced",
                          "serp_google_search_by_image_live_advanced",
                          "serp_bing_local_pack_live_regular",
                          "serp_youtube_video_info_live_advanced",
                          "serp_youtube_video_subtitles_live_advanced",
                          "serp_youtube_video_comments_live_advanced"
                        ],
                        "description": "Name des SERP API Tools"
                      },
                      "arguments": {
                        "type": "object",
                        "properties": {
                          "keyword": {
                            "type": "string",
                            "description": "Suchbegriff für die SERP-Analyse",
                            "example": "seo tools"
                          },
                          "location_name": {
                            "type": "string",
                            "description": "Standort für die Suche",
                            "example": "Germany"
                          },
                          "language_code": {
                            "type": "string",
                            "description": "Sprachcode",
                            "example": "de"
                          },
                          "device": {
                            "type": "string",
                            "enum": ["desktop", "mobile", "tablet"],
                            "description": "Gerätetyp",
                            "example": "desktop"
                          },
                          "os": {
                            "type": "string",
                            "enum": ["windows", "macos", "linux", "android", "ios"],
                            "description": "Betriebssystem",
                            "example": "windows"
                          },
                          "depth": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 100,
                            "description": "Anzahl der Ergebnisse",
                            "example": 10
                          },
                          "url": {
                            "type": "string",
                            "format": "uri",
                            "description": "URL für spezifische Analysen",
                            "example": "https://example.com"
                          },
                          "image_url": {
                            "type": "string",
                            "format": "uri",
                            "description": "Bild-URL für Reverse Image Search",
                            "example": "https://example.com/image.jpg"
                          },
                          "video_id": {
                            "type": "string",
                            "description": "YouTube Video ID",
                            "example": "dQw4w9WgXcQ"
                          },
                          "video_url": {
                            "type": "string",
                            "format": "uri",
                            "description": "YouTube Video URL",
                            "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                          },
                          "dataset_url": {
                            "type": "string",
                            "format": "uri",
                            "description": "Dataset URL für Dataset Info",
                            "example": "https://www.kaggle.com/datasets/example"
                          },
                          "job_type": {
                            "type": "string",
                            "description": "Job-Typ für Google Jobs",
                            "example": "software engineer"
                          },
                          "company": {
                            "type": "string",
                            "description": "Unternehmen für Job-Suche",
                            "example": "Google"
                          },
                          "location": {
                            "type": "string",
                            "description": "Standort für Job-Suche",
                            "example": "Berlin, Germany"
                          },
                          "salary_min": {
                            "type": "integer",
                            "description": "Mindestgehalt",
                            "example": 50000
                          },
                          "salary_max": {
                            "type": "integer",
                            "description": "Höchstgehalt",
                            "example": 100000
                          },
                          "date_posted": {
                            "type": "string",
                            "enum": ["any", "today", "3days", "week", "month"],
                            "description": "Veröffentlichungsdatum",
                            "example": "week"
                          },
                          "employment_type": {
                            "type": "string",
                            "enum": ["full_time", "part_time", "contract", "temporary", "internship"],
                            "description": "Beschäftigungsart",
                            "example": "full_time"
                          },
                          "experience_level": {
                            "type": "string",
                            "enum": ["entry_level", "mid_level", "senior_level", "executive"],
                            "description": "Erfahrungslevel",
                            "example": "mid_level"
                          },
                          "education": {
                            "type": "string",
                            "enum": ["high_school", "associate", "bachelor", "master", "doctorate"],
                            "description": "Bildungsabschluss",
                            "example": "bachelor"
                          },
                          "remote": {
                            "type": "boolean",
                            "description": "Remote-Arbeit möglich",
                            "example": true
                          },
                          "sort_by": {
                            "type": "string",
                            "enum": ["relevance", "date", "salary"],
                            "description": "Sortierung",
                            "example": "relevance"
                          },
                          "radius": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 500,
                            "description": "Suchradius in km",
                            "example": 25
                          },
                          "category": {
                            "type": "string",
                            "description": "Kategorie für lokale Suche",
                            "example": "restaurants"
                          },
                          "price_level": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 4,
                            "description": "Preisniveau (1-4)",
                            "example": 2
                          },
                          "rating_min": {
                            "type": "number",
                            "minimum": 1,
                            "maximum": 5,
                            "description": "Mindestbewertung",
                            "example": 4.0
                          },
                          "open_now": {
                            "type": "boolean",
                            "description": "Nur geöffnete Orte",
                            "example": true
                          },
                          "subtitle_language": {
                            "type": "string",
                            "description": "Untertitel-Sprache",
                            "example": "de"
                          },
                          "comment_count": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 100,
                            "description": "Anzahl der Kommentare",
                            "example": 20
                          },
                          "comment_sort": {
                            "type": "string",
                            "enum": ["top", "newest", "oldest"],
                            "description": "Kommentar-Sortierung",
                            "example": "top"
                          }
                        },
                        "required": ["keyword"]
                      }
                    },
                    "required": ["name", "arguments"]
                  }
                },
                "required": ["jsonrpc", "id", "method", "params"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Erfolgreiche SERP-Analyse",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string",
                      "example": "2.0"
                    },
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "result": {
                      "type": "object",
                      "properties": {
                        "content": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "type": {
                                "type": "string",
                                "example": "text"
                              },
                              "text": {
                                "type": "string",
                                "description": "SERP-Analyse Ergebnisse"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ungültige Anfrage",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string",
                      "example": "2.0"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer",
                          "example": -32602
                        },
                        "message": {
                          "type": "string",
                          "example": "Invalid params"
                        }
                      }
                    },
                    "id": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentifizierung fehlgeschlagen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string",
                      "example": "2.0"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer",
                          "example": -32001
                        },
                        "message": {
                          "type": "string",
                          "example": "Authentication required"
                        }
                      }
                    },
                    "id": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Interner Serverfehler",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string",
                      "example": "2.0"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer",
                          "example": -32603
                        },
                        "message": {
                          "type": "string",
                          "example": "Internal server error"
                        }
                      }
                    },
                    "id": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic",
        "description": "DataForSEO API Credentials"
      }
    },
    "schemas": {
      "SerpRequest": {
        "type": "object",
        "properties": {
          "keyword": {
            "type": "string",
            "description": "Suchbegriff",
            "example": "seo tools"
          },
          "location_name": {
            "type": "string",
            "description": "Standort",
            "example": "Germany"
          },
          "language_code": {
            "type": "string",
            "description": "Sprachcode",
            "example": "de"
          },
          "device": {
            "type": "string",
            "enum": ["desktop", "mobile", "tablet"],
            "description": "Gerätetyp",
            "example": "desktop"
          },
          "depth": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "description": "Anzahl der Ergebnisse",
            "example": 10
          }
        },
        "required": ["keyword"]
      },
      "SerpResponse": {
        "type": "object",
        "properties": {
          "jsonrpc": {
            "type": "string",
            "example": "2.0"
          },
          "id": {
            "type": "integer",
            "example": 1
          },
          "result": {
            "type": "object",
            "properties": {
              "content": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "text"
                    },
                    "text": {
                      "type": "string",
                      "description": "SERP-Analyse Ergebnisse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Google SERP",
      "description": "Google Suchergebnisse und AI-Mode"
    },
    {
      "name": "Bing SERP",
      "description": "Bing Suchergebnisse und Local Pack"
    },
    {
      "name": "YouTube SERP",
      "description": "YouTube Videos, Kommentare und Untertitel"
    },
    {
      "name": "Google Images",
      "description": "Google Bildersuche und Reverse Image Search"
    },
    {
      "name": "Google Jobs",
      "description": "Google Jobs-Suche"
    },
    {
      "name": "Google Datasets",
      "description": "Google Dataset Search und Info"
    }
  ]
}
