{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/frontend/public/favicon.ico"
    },
    {
      "src": "/favicon-16x16.png",
      "dest": "/frontend/public/favicon-16x16.png"
    },
    {
      "src": "/favicon-32x32.png",
      "dest": "/frontend/public/favicon-32x32.png"
    },
    {
      "src": "/apple-touch-icon.png",
      "dest": "/frontend/public/apple-touch-icon.png"
    },
    {
      "src": "/site.webmanifest",
      "dest": "/frontend/public/site.webmanifest"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "crons": [
    { "path": "/api/cron/cleanup-blobs", "schedule": "0 3 * * *" }
  ]
} 