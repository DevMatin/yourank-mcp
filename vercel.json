{
  "version": 2,
  "outputDirectory": "build",
  "routes": [
    {
      "src": "/mcp",
      "dest": "/api/index.js"
    },
    {
      "src": "/http", 
      "dest": "/api/index.js"
    },
    {
      "src": "/sse",
      "dest": "/api/index.js"
    },
    {
      "src": "/messages",
      "dest": "/api/index.js"
    },
    {
      "src": "/v3/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/blob/proxy",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/cron/cleanup-blobs",
      "dest": "/api/cron/cleanup-blobs.js"
    }
  ],
  "crons": [
    { "path": "/api/cron/cleanup-blobs", "schedule": "0 3 * * *" }
  ]
} 