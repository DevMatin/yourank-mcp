{
  "version": 2,
  "builds": [
    {
      "src": "src/main/index-sse-http.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron/cleanup-blobs.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp",
      "dest": "/src/main/index-sse-http.ts"
    },
    {
      "src": "/http", 
      "dest": "/src/main/index-sse-http.ts"
    },
    {
      "src": "/sse",
      "dest": "/src/main/index-sse-http.ts"
    },
    {
      "src": "/messages",
      "dest": "/src/main/index-sse-http.ts"
    },
    {
      "src": "/api/blob/proxy",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/cron/cleanup-blobs",
      "dest": "/api/cron/cleanup-blobs.js"
    }
  ],
  "crons": [
    { "path": "/api/cron/cleanup-blobs", "schedule": "0 3 * * *" }
  ]
} 