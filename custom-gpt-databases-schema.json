{
  "openapi": "3.1.0",
  "info": {
    "title": "DataForSEO Databases API",
    "version": "1.0.0",
    "description": "Comprehensive access to DataForSEO Databases including Google SERP & Keywords, Bing Databases, Amazon Products, App Store data, Backlinks, Business Listings, and Whois information"
  },
  "servers": [
    {
      "url": "https://yourank-mcp.vercel.app",
      "description": "DataForSEO MCP Server"
    }
  ],
  "security": [
    {
      "basicAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "DatabaseRequest": {
        "type": "object",
        "properties": {
          "location_name": {
            "type": "string",
            "description": "Location name (e.g., 'Germany', 'United States')"
          },
          "location_code": {
            "type": "integer",
            "description": "Location code (alternative to location_name)"
          },
          "language_code": {
            "type": "string",
            "description": "Language code (e.g., 'en', 'de')"
          },
          "keyword": {
            "type": "string",
            "description": "Keyword to search"
          },
          "domain": {
            "type": "string",
            "description": "Domain to search"
          },
          "filters": {
            "type": "array",
            "items": {},
            "description": "Array of filter conditions"
          },
          "order_by": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of fields to order results by"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of results to return"
          },
          "offset": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Offset for pagination"
          }
        }
      },
      "GoogleSerpRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DatabaseRequest"
          }
        ]
      },
      "GoogleKeywordsRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DatabaseRequest"
          }
        ],
        "properties": {
          "keyword_part": {
            "type": "string",
            "description": "Partial keyword to search for"
          },
          "search_volume_min": {
            "type": "integer",
            "description": "Minimum search volume filter"
          },
          "search_volume_max": {
            "type": "integer",
            "description": "Maximum search volume filter"
          },
          "cpc_min": {
            "type": "number",
            "description": "Minimum CPC filter"
          },
          "cpc_max": {
            "type": "number",
            "description": "Maximum CPC filter"
          },
          "competition_min": {
            "type": "number",
            "description": "Minimum competition level filter"
          },
          "competition_max": {
            "type": "number",
            "description": "Maximum competition level filter"
          }
        }
      },
      "HistoricalRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DatabaseRequest"
          }
        ],
        "properties": {
          "date_from": {
            "type": "string",
            "format": "date",
            "description": "Start date for historical data (YYYY-MM-DD)"
          },
          "date_to": {
            "type": "string",
            "format": "date",
            "description": "End date for historical data (YYYY-MM-DD)"
          }
        }
      },
      "AmazonRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DatabaseRequest"
          }
        ],
        "properties": {
          "product_title": {
            "type": "string",
            "description": "Product title to search for"
          },
          "category": {
            "type": "string",
            "description": "Product category filter"
          },
          "price_min": {
            "type": "number",
            "description": "Minimum price filter"
          },
          "price_max": {
            "type": "number",
            "description": "Maximum price filter"
          },
          "rating_min": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Minimum rating filter (1-5)"
          },
          "rating_max": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Maximum rating filter (1-5)"
          },
          "reviews_min": {
            "type": "integer",
            "description": "Minimum number of reviews filter"
          }
        }
      },
      "AppStoreRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DatabaseRequest"
          }
        ],
        "properties": {
          "app_name": {
            "type": "string",
            "description": "App name to search for"
          },
          "app_id": {
            "type": "string",
            "description": "App ID to search for"
          },
          "category": {
            "type": "string",
            "description": "App category filter"
          },
          "rating_min": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Minimum rating filter (1-5)"
          },
          "rating_max": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Maximum rating filter (1-5)"
          },
          "reviews_min": {
            "type": "integer",
            "description": "Minimum number of reviews filter"
          },
          "price_min": {
            "type": "number",
            "description": "Minimum price filter"
          },
          "price_max": {
            "type": "number",
            "description": "Maximum price filter"
          },
          "search_volume_min": {
            "type": "integer",
            "description": "Minimum search volume filter"
          },
          "search_volume_max": {
            "type": "integer",
            "description": "Maximum search volume filter"
          }
        }
      },
      "BacklinkRequest": {
        "type": "object",
        "properties": {
          "domain": {
            "type": "string",
            "description": "Domain to search for"
          },
          "domain_part": {
            "type": "string",
            "description": "Partial domain to search for"
          },
          "backlinks_min": {
            "type": "integer",
            "description": "Minimum number of backlinks filter"
          },
          "backlinks_max": {
            "type": "integer",
            "description": "Maximum number of backlinks filter"
          },
          "referring_domains_min": {
            "type": "integer",
            "description": "Minimum number of referring domains filter"
          },
          "referring_domains_max": {
            "type": "integer",
            "description": "Maximum number of referring domains filter"
          },
          "spam_score_min": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Minimum spam score filter (0-100)"
          },
          "spam_score_max": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Maximum spam score filter (0-100)"
          },
          "filters": {
            "type": "array",
            "items": {},
            "description": "Array of filter conditions"
          },
          "order_by": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of fields to order results by"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of results to return"
          },
          "offset": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Offset for pagination"
          }
        }
      },
      "BusinessListingsRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DatabaseRequest"
          }
        ],
        "properties": {
          "business_name": {
            "type": "string",
            "description": "Business name to search for"
          },
          "category": {
            "type": "string",
            "description": "Business category filter"
          },
          "rating_min": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Minimum rating filter (1-5)"
          },
          "rating_max": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Maximum rating filter (1-5)"
          },
          "reviews_min": {
            "type": "integer",
            "description": "Minimum number of reviews filter"
          },
          "price_level_min": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "description": "Minimum price level filter (1-4)"
          },
          "price_level_max": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "description": "Maximum price level filter (1-4)"
          },
          "has_phone": {
            "type": "boolean",
            "description": "Filter for businesses with phone numbers"
          },
          "has_website": {
            "type": "boolean",
            "description": "Filter for businesses with websites"
          }
        }
      },
      "WhoisRequest": {
        "type": "object",
        "properties": {
          "domain": {
            "type": "string",
            "description": "Domain to search for"
          },
          "domain_part": {
            "type": "string",
            "description": "Partial domain to search for"
          },
          "tld": {
            "type": "string",
            "description": "Top-level domain filter (e.g., 'com', 'org', 'de')"
          },
          "registrar": {
            "type": "string",
            "description": "Domain registrar filter"
          },
          "creation_date_from": {
            "type": "string",
            "format": "date",
            "description": "Domain creation date from (YYYY-MM-DD)"
          },
          "creation_date_to": {
            "type": "string",
            "format": "date",
            "description": "Domain creation date to (YYYY-MM-DD)"
          },
          "expiration_date_from": {
            "type": "string",
            "format": "date",
            "description": "Domain expiration date from (YYYY-MM-DD)"
          },
          "expiration_date_to": {
            "type": "string",
            "format": "date",
            "description": "Domain expiration date to (YYYY-MM-DD)"
          },
          "status": {
            "type": "string",
            "description": "Domain status filter (e.g., 'active', 'expired', 'pending')"
          },
          "visibility_score_min": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Minimum visibility score filter (0-100)"
          },
          "visibility_score_max": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Maximum visibility score filter (0-100)"
          },
          "filters": {
            "type": "array",
            "items": {},
            "description": "Array of filter conditions"
          },
          "order_by": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of fields to order results by"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of results to return"
          },
          "offset": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Offset for pagination"
          }
        }
      }
    }
  },
  "paths": {
    "/v3/databases/google/serps_advanced": {
      "post": {
        "summary": "Google Advanced SERP Database",
        "description": "Access Google Advanced SERP Database containing all kinds of SERP elements including organic and paid results, featured snippets, knowledge graphs, top stories, and more with Page Rank and Domain Rank metrics",
        "operationId": "databases_google_serps_advanced",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/GoogleSerpRequest"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with Google Advanced SERP database results"
          }
        }
      }
    },
    "/v3/databases/google/serps_regular": {
